section "Prepare Program & Domain"
stop at examples.tests.StaticFieldsTest:14
run examples/tests/StaticFieldsTest.java

section "Build Knowledge Base"
buildkb --limit-sdk
checkkb --is-consistent

section "Are the fields correctly declared?"

assert triples -- '<<EOF
    prog:examples.tests.MyClass java:hasField prog:examples.tests.MyClass.staticIntField ;
                                java:hasField prog:examples.tests.MyClass.staticStringField ;
                                java:hasField prog:examples.tests.MyClass.nonStaticField .

    prog:examples.tests.MyClass.staticIntField java:isStatic "true"^^xsd:boolean .
    prog:examples.tests.MyClass.staticStringField java:isStatic "true"^^xsd:boolean .
    prog:examples.tests.MyClass.nonStaticField java:isStatic "false"^^xsd:boolean .
'EOF

section "Are the static values present?"

assert sparql success -- '<<EOF
    SELECT ?string
    WHERE {
        prog:examples.tests.MyClass prog:examples.tests.MyClass.staticIntField "42"^^xsd:int ;
                                    prog:examples.tests.MyClass.staticStringField ?string .
        ?string java:hasStringValue "Lorem Ipsum"^^xsd:string .
    }
'EOF

section "Object instances do not implement static fields"

assert sparql fail -- '<<EOF
    SELECT ?something
    WHERE {
        [] a prog:examples.tests.MyClass ;
           prog:examples.tests.MyClass.staticIntField ?something .
    }
'EOF

cont